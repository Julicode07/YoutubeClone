---
import AsideNav from "../components/AsideNav.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/youtube.svg" />
    <title>{title}</title>
  </head>
  <body>
    <AsideNav />
    <main class="bg-white text-black dark:bg-[#0F0F0F] dark:text-white">
      <slot />
    </main>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"
    ></script>
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap");
  html {
    font-family: "Roboto", sans-serif;
    color: #fff;
  }
  .roboto-thin {
    font-weight: 100;
    font-style: normal;
  }

  .roboto-light {
    font-weight: 300;
    font-style: normal;
  }

  .roboto-regular {
    font-weight: 400;
    font-style: normal;
  }

  .roboto-medium {
    font-weight: 500;
    font-style: normal;
  }

  .roboto-bold {
    font-weight: 700;
    font-style: normal;
  }

  .roboto-black {
    font-weight: 900;
    font-style: normal;
  }
</style>
